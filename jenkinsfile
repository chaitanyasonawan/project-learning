pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:chaitanyasonawane/project-learning.git'
            }
        }

        stage('Deploy to Nginx') {
            steps {
                sh '''
                    echo "Deploying static website..."

                    sudo rm -rf /var/www/html/*
                    sudo cp -r * /var/www/html/

                    sudo systemctl restart nginx

                    echo "Deployment successful"
                '''
            }
        }
    }

    post {
        success {
            echo 'Website deployed successfully üéâ'
        }
        failure {
            echo 'Deployment failed ‚ùå'
        }
    }
}


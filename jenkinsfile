pipeline {
    agent any

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/chaitanyasonawan/project-learning.git'
            }
        }

        stage('Validate Files') {
            steps {
                sh '''
                echo "Validating HTML..."
                ls *.html

                echo "Validating CSS..."
                ls *.css

                echo "Validating JavaScript..."
                ls *.js
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t project-learning-web .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                docker stop web || true
                docker rm web || true
                docker run -d -p 8081:80 --name web project-learning-web
                '''
            }
        }
    }
}

